# Bandit configuration for stillwater/cli
# These are legitimate use cases in the context of a CLI tool

[bandit]
# Exclude specific tests that are safe in this context
exclude_dirs = ['.venv', 'venv', '.tox', 'tests']
skips = ['B310', 'B307', 'B113']

# Skip specific test IDs:
# B310: urllib.urlopen - legitimate for CLI tool making HTTP requests
# B307: eval() - used with restricted builtins, intentionally safe
# B113: requests without timeout - timeout is intentionally parameterized
